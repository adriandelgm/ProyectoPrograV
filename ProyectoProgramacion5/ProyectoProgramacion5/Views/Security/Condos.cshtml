@{
}
<br />
<div class="container-fluid">
    <div class="card" style="max-width: 1000px; margin: auto; border-color:#FFFFFF">
        <div class="card-body">
            <div class="row">
                @foreach (var condo in ViewBag.CondoList)
                {
                    <div class="col-lg-4 col-md-6 mb-3">
                        <form method="get" action="@Url.Action("Security", "Security")">
                            <input type="hidden" name="projectId" value="@condo.CondoID" />
                            <button type="submit" class="btn btn-primary btn-lg btn-block">@condo.CondoName</button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


